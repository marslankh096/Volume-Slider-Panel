<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient android:startColor="#dcdada" android:endColor="#6d6d6d" android:angle="90"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="2dp"/>
                <gradient android:startColor="#ef6c00" android:endColor="#ef6c00" android:angle="90"/>
            </shape>
        </scale>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <shape android:shape="rectangle">
            <size android:height="3dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</layer-list>
